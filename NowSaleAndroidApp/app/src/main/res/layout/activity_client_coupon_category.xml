<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.yoonsung.nowsale.CouponCategoryActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="#ffffff"

    android:orientation="vertical"
    android:weightSum="9">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:src="@drawable/dahyun"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="3"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="8"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/category_alcohol"
            android:background="@drawable/list_selector">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="5.4"
                android:src="@drawable/alcohol"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="술집"
                android:textColor="@color/baseColor"
                android:textSize="15dp"
                android:gravity="center|top"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="8"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/category_food"
            android:background="@drawable/list_selector">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="5.4"
                android:src="@drawable/food"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="맛집"
                android:textSize="15dp"
                android:textColor="@color/baseColor"
                android:gravity="center|top"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="8"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/category_health"
            android:background="@drawable/list_selector">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="0dp"

                android:layout_gravity="center"
                android:layout_weight="5.4"
                android:src="@drawable/health"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textColor="@color/baseColor"
                android:text="헬스"
                android:textSize="15dp"
                android:gravity="center|top"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="3"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="8"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/category_play"
            android:background="@drawable/list_selector">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="5.4"
                android:src="@drawable/play"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/baseColor"
                android:layout_weight="2"
                android:text="여가문화"
                android:textSize="15dp"
                android:gravity="center|top"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="8"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/category_fashion"
            android:background="@drawable/list_selector">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:layout_weight="5.4"
                android:layout_gravity="center"
                android:src="@drawable/fashion"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="패션잡화"
                android:textSize="15dp"
                android:textColor="@color/baseColor"
                android:gravity="center|top"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="8"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/category_beauty"
            android:background="@drawable/list_selector">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:layout_weight="5.4"
                android:layout_gravity="center"
                android:src="@drawable/beauty"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textColor="@color/baseColor"
                android:text="뷰티"
                android:textSize="15dp"
                android:gravity="center|top"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="8"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/category_study"
            android:background="@drawable/list_selector">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="5.4"
                android:src="@drawable/study"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textColor="@color/baseColor"
                android:text="학습"
                android:textSize="15dp"
                android:gravity="center|top"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="8"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"

            android:id="@+id/category_cafe"
            android:background="@drawable/list_selector">
            <ImageView
                android:layout_width="45dp"
                android:layout_gravity="center"
                android:layout_height="0dp"
                android:layout_weight="5.4"
                android:src="@drawable/cafe"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="카페"
                android:textSize="15dp"
                android:textColor="@color/baseColor"
                android:gravity="center|top"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="8"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/category_others"
            android:background="@drawable/list_selector">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:layout_weight="5.4"
                android:layout_gravity="center"
                android:src="@drawable/others"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:textColor="@color/baseColor"
                android:text="기타"
                android:textSize="15dp"
                android:gravity="center|top"/>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>
