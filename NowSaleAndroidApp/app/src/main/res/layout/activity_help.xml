<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"

    android:background="@color/app_background_color">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/appMainColor"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >
            <android.support.constraint.Guideline
                android:id="@+id/gd_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.2" />
            <android.support.constraint.Guideline
                android:id="@+id/gd_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.8" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/back"
                android:layout_gravity="left|center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/back"

                    android:layout_gravity="left|center_vertical"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/round_white"
                app:layout_constraintLeft_toRightOf="@id/gd_left"
                app:layout_constraintRight_toLeftOf="@id/gd_right"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고객센터"
                    android:layout_gravity="center"
                    android:id="@+id/title_txt"
                    android:textColor="@color/baseColor"
                    android:textSize="18sp"

                    />
            </FrameLayout>

        </android.support.constraint.ConstraintLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/whiteColor"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지금은할인중"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/baseColor"
                android:textStyle="bold"
                android:id="@+id/text1"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="은"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/baseColor"
                android:layout_toRightOf="@id/text1"
                />

        </RelativeLayout>
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카카오톡을 통하여 고객센터를"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="@color/baseColor"
            />
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운영하고 있습니다."
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="@color/baseColor"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:1문의"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/baseColor"
                android:textStyle="bold"
                android:id="@+id/L2text1"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="는 "
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/baseColor"
                android:layout_toRightOf="@id/L2text1"
                android:id="@+id/L2text2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카카오톡 플러스친구"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/baseColor"
                android:textStyle="bold"
                android:id="@+id/L2text3"
                android:layout_toRightOf="@id/L2text2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="를"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/baseColor"
                android:layout_toRightOf="@id/L2text3"
                android:id="@+id/L2text4"
                />

        </RelativeLayout>
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="통해서 실시간으로 접수를 받고 있습니다."
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="@color/baseColor"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/yellow_kakao_selector"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/kakaoLinkBtn">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="카카오톡에서 지금은 할인중 친구추가 해주세요"
                android:textSize="13dp"
                android:textColor="@color/baseColor"
                android:layout_gravity="left"
            />
            <ImageView
                android:layout_gravity="right"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/kakao_account_logo"

                android:layout_marginRight="15dp"/>
        </FrameLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이용 약관"
            android:textSize="15dp"
            android:textColor="@color/baseColor"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="@color/cursorColor"

            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            >
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/whiteColor"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ruleLayout">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="개인정보 처리방침"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/baseColor"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/userInfoRule"
                        android:textSize="15dp"
                        android:textColor="@color/baseColor"/>
                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="지금은할인중 표준약관"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="@color/baseColor"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nowsaleRule"
                        android:textSize="15dp"
                        android:textColor="@color/baseColor"/>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="010-4598-4682"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/baseColor"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="찹찹브라더스\nchapchapbrothers@naver.com\nAM 10:00 - PM 17:00"
            android:textSize="15dp"
            android:textColor="@color/baseColor"
            />
    </LinearLayout>


</LinearLayout>
