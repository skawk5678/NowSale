<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginBottom="15dp"
    android:background="@color/app_background_color">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:id="@+id/back"
            android:layout_gravity="left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="고객센터"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/baseColor"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="@color/cursorColor"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_help"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/baseColor"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/yellow_list_selector"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/kakaoLinkBtn">
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="카카오톡에서 지금은 할인중 친구추가 해주세요"
            android:textSize="13dp"
            android:textColor="@color/baseColor"
            android:layout_gravity="left"
        />
        <ImageView
            android:layout_gravity="right"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/kakao_account_logo"

            android:layout_marginRight="15dp"/>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이용 약관"
                android:textSize="15dp"
                android:textColor="@color/baseColor"
                android:gravity="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:background="@color/cursorColor"
                android:layout_marginBottom="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ruleLayout">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="개인정보 처리방침"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/baseColor"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/userInfoRule"
                    android:textSize="15dp"
                    android:textColor="@color/baseColor"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="지금은할인중 표준약관"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="@color/baseColor"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nowsaleRule"
                    android:textSize="15dp"
                    android:textColor="@color/baseColor"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="010-4598-4682"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/baseColor"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="찹찹브라더스\nchapchapbrothers@naver.com\nAM 10:00 - PM 17:00"
        android:textSize="15dp"
        android:textColor="@color/baseColor"
        />


</LinearLayout>
