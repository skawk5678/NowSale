<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yoonsung.nowsale.LoginActivity"
    android:orientation="vertical"
    android:weightSum="22">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:src="@drawable/nowsale"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="18dp"
        android:textColor="@android:color/holo_orange_dark"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="지금 회원가입을 하면 주변 상점의\n다양한 쿠폰을 무료로 즐길 수 있어요"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="vertical"
        android:weightSum="15">
        <EditText
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="이름"
            android:background="@drawable/round_edittext"
            android:id="@+id/signup_name"
            android:layout_weight="2"/>
        <EditText
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="폰번호"
            android:id="@+id/signup_phone"
            android:background="@drawable/round_edittext"
            android:layout_weight="2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:weightSum="20"
            android:orientation="horizontal"
            android:background="@drawable/round_edittext">
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="아이디"
                android:background="@null"
                android:id="@+id/signup_id"
                android:layout_weight="16"
                android:maxLength="12"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"

                android:text="중복확인"
                android:textSize="15dp"
                android:textColor="#6565bf"
                android:id="@+id/signup_overlap"
                android:layout_weight="4"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="6~12자리 영문, 숫자로 입력해 주세요"
            android:textSize="18dp"
            android:gravity="center"
            />
        <EditText
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/signup_pw"
            android:hint="비밀번호"
            android:background="@drawable/round_edittext"
            android:maxLength="16"
            android:layout_weight="2"/>
        <EditText
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:hint="비밀번호 확인"
            android:id="@+id/signup_pwCheck"
            android:background="@drawable/round_edittext"
            android:maxLength="16"
            android:layout_weight="2"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="회원가입"
        android:textColor="#000000"
        android:background="#FE9A2E"
        android:id="@+id/signupBtn"
        android:layout_marginBottom="30dp"
        />

</LinearLayout>
