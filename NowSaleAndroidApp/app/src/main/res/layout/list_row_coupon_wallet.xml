<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:weightSum="13"
    android:background="@drawable/list_selector"
    >

    <LinearLayout
        android:id="@+id/linear_id"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10.7"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/logo_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:weightSum="8"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/content_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:gravity="left|center"
                android:text="맥주 1병 서비스"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/qualification_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="2.5"
                android:gravity="left|center"
                android:text="신메뉴 주문시"
                android:textColor="@color/cursorColor"
                android:textSize="15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                >

                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="3.8"
                    android:gravity="left|top"
                    android:text="2018년 9월 22일 ~ 2018년 9월30일"
                    android:textColor="@color/cursorColor"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1.6"
                    android:gravity="left|top"
                    android:layout_toRightOf="@id/date_text"
                    android:text=" / 30개 남음"
                    android:textColor="@color/baseColor"
                    android:textSize="10dp" />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.53"
        android:id="@+id/haveBtn"
        android:visibility="gone">
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:background="@drawable/coupondownload"
            android:textColor="#000000"
            android:layout_gravity="center_vertical|left"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.53"
        android:id="@+id/goBtn"
        android:visibility="gone">
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/go"
            android:textColor="#000000"
            android:layout_gravity="center_vertical|left"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.53"
        android:id="@+id/heartBtn"
        android:visibility="gone"
        >
        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/sale_down"
            android:textColor="#000000"
            android:layout_gravity="center_vertical|left"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.53"
        android:weightSum="2"
        android:orientation="vertical"
        android:background="@drawable/round_button"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        android:id="@+id/useCancelLayout">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="사용"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/baseColor"
            android:id="@+id/useItem"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="@color/notChooseColor"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="삭제"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/baseColor"
            android:id="@+id/deleteItem"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.53"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        android:id="@+id/deleteOwnerCouponLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="20"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/baseColor"
                android:id="@+id/remainOwnerRegisteredCouponCount"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="/"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/baseColor"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="200"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/baseColor"
                android:id="@+id/startOwnerRegisteredCouponCount"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="삭제"
            android:gravity="center"
            android:background="@drawable/round_button"
            android:textSize="16sp"
            android:textColor="@color/baseColor"
            android:id="@+id/deleteOwnerCoupon"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.4"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        android:id="@+id/deleteLayout">
        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_button"
            android:text="삭제"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/baseColor"
            android:id="@+id/deleteSale"
            />

    </LinearLayout>

    <!--
    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_width="40dp"
        android:layout_height="match_parent"

        android:textSize="18dp"
        android:layout_gravity="center"
        android:background="@drawable/coupondownload"

        android:textColor="#000000"
        android:id="@+id/haveBtn"/>
        -->




</LinearLayout>