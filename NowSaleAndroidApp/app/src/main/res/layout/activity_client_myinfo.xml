<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yoonsung.nowsale.LoginActivity"
    android:orientation="vertical"
    android:weightSum="22"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"

    android:layout_marginBottom="@dimen/activity_vertical_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/back"
            android:id="@+id/back"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/baseColor"



            android:text="개인정보수정"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="변경"
            android:textSize="17dp"
            android:textColor="@color/appMainColor"
            android:gravity="center_vertical|right"
            android:layout_weight="1"
            android:id="@+id/changeBtn"/>
    </LinearLayout>

    <View
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="@color/cursorColor"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="이메일"
            android:gravity="center_vertical|left"
            android:textColor="@color/baseColor"
            android:theme="@style/EditTheme"
            android:inputType="textEmailAddress"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textColor="@color/baseColor"
            android:gravity="center_vertical|left"
            android:textSize="15dp"
            android:id="@+id/txt_email"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="닉네임"
            android:gravity="center_vertical|left"
            android:textColor="@color/baseColor"
            android:textSize="15dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textColor="@color/baseColor"
            android:theme="@style/EditTheme"
            android:textSize="15dp"
            android:background="@drawable/round_button_gray"
            android:id="@+id/edit_nickname"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="비밀번호"
            android:gravity="center_vertical|left"
            android:textColor="@color/baseColor"

            android:textSize="15dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textColor="@color/baseColor"
            android:textSize="15dp"
            android:background="@drawable/round_button_gray"
            android:theme="@style/EditTheme"
            android:inputType="textPassword"
            android:id="@+id/edit_pw"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="비밀번호 확인"
            android:gravity="center_vertical|left"
            android:textColor="@color/baseColor"
            android:textSize="15dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textColor="@color/baseColor"
            android:theme="@style/EditTheme"
            android:inputType="textPassword"
            android:textSize="15dp"
            android:background="@drawable/round_button_gray"
            android:id="@+id/edit_pw_check"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:text="마케팅 정보 수신 동의"
        android:textColor="@color/baseColor"
        android:textSize="17dp"/>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="더 많은 할인혜택을 받아보실 수 있어요!"
        android:textColor="@color/cursorColor"
        android:textSize="14dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="푸쉬알람 수신동의"
            android:gravity="center_vertical|left"
            android:textColor="@color/baseColor"
            android:textSize="15dp"/>
        <CheckBox
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@android:color/transparent"
            android:background="@drawable/checkbox_yellow_circle"
            android:id="@+id/check_push1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"
            android:text="동의함"
            android:layout_weight="0.6"
            android:textColor="@color/baseColor"
            android:gravity="center_vertical|left"/>
        <CheckBox
            android:layout_marginLeft="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@android:color/transparent"
            android:background="@drawable/checkbox_yellow_circle"
            android:id="@+id/check_push2"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="동의안함"
            android:gravity="center_vertical|left"
            android:layout_weight="0.6"
            android:textColor="@color/baseColor"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="메일 수신동의"
            android:gravity="center_vertical|left"
            android:textColor="@color/baseColor"
            android:textSize="15dp"/>
        <CheckBox
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@android:color/transparent"
            android:background="@drawable/checkbox_yellow_circle"
            android:id="@+id/check_mail1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"
            android:text="동의함"
            android:layout_weight="0.6"
            android:textColor="@color/baseColor"
            android:gravity="center_vertical|left"/>
        <CheckBox
            android:layout_marginLeft="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@android:color/transparent"
            android:id="@+id/check_mail2"
            android:background="@drawable/checkbox_yellow_circle"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="동의안함"
            android:gravity="center_vertical|left"
            android:layout_weight="0.6"
            android:textColor="@color/baseColor"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="SMS 수신동의"
            android:gravity="center_vertical|left"
            android:textColor="@color/baseColor"
            android:textSize="15dp"/>
        <CheckBox
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@android:color/transparent"
            android:background="@drawable/checkbox_yellow_circle"
            android:id="@+id/check_sms1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent"
            android:text="동의함"
            android:layout_weight="0.6"
            android:textColor="@color/baseColor"
            android:gravity="center_vertical|left"/>
        <CheckBox
            android:layout_marginLeft="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@android:color/transparent"
            android:background="@drawable/checkbox_yellow_circle"
            android:id="@+id/check_sms2"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="동의안함"
            android:gravity="center_vertical|left"
            android:layout_weight="0.6"
            android:textColor="@color/baseColor"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.8"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="로그아웃"
            android:gravity="bottom"
            android:textSize="13sp"
            android:textColor="@color/cursorColor"
            android:layout_marginRight="10dp"
            android:id="@+id/logoutBtn"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="회원탈퇴"
            android:gravity="bottom"
            android:textSize="13sp"
            android:textColor="@color/cursorColor"
            android:id="@+id/deleteClientBtn"/>

    </LinearLayout>

</LinearLayout>
