<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yoonsung.nowsale.LoginActivity"

    android:orientation="vertical"
    android:weightSum="22">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"

        android:textSize="18dp"
        android:textColor="@android:color/holo_orange_dark"
        android:gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="프로필 수정"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="#000000"
        />
    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/round_edittext"
        android:hint="이름"
        android:id="@+id/setUpname"
        android:gravity="center_vertical"
        android:textSize="18dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#000000"/>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/round_edittext"
        android:id="@+id/setUpnickName"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:hint="별명"
        android:textSize="18dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#000000"
        />
    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/round_edittext"
        android:id="@+id/setUppassword"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:hint="비밀번호"
        android:textSize="18dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#000000"/>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/round_edittext"
        android:id="@+id/setUpcheckPassword"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:hint="비밀번호 확인"
        android:textSize="18dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#000000"/>
    <EditText
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:hint="폰번호"
        android:id="@+id/signup_phone"
        android:background="@drawable/round_edittext"
        android:layout_weight="7"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#000000"
        />
    <TextView
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/setUpexitBtn"
        android:layout_gravity="center"
        android:text="회원탈퇴"

        android:textSize="18dp"
        android:gravity="center_vertical"

        android:maxLength="16"
        android:layout_weight="2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#000000"
        />
    <TextView
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/setUpchangeBtn"
        android:layout_gravity="center"
        android:text="수정"
        android:textSize="18dp"
        android:gravity="center_vertical"

        android:maxLength="16"
        android:layout_weight="2"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="#000000"/>


</LinearLayout>
